@model IEnumerable<TagModels>

@* Generated from Custom Template for Tags *@
@{
    var containerDivClass = "container";
}
@{
    ViewData["Title"] = "Tag List";
}

<style>
    body {
        background-color: #fff8f8;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    h1 {
        color: #ff6f91;
        font-family: 'Playfair Display', serif;
        font-weight: bold;
        text-align: center;
    }

    .text-success {
        color: #4caf50 !important;
    }

    .text-danger {
        color: #ff6f91 !important;
    }

    .btn-pink {
        background-color: #ff6f91;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 5px 10px;
    }

    .btn-pink:hover {
        background-color: #ff5777;
        color: white;
    }

    .table {
        border: 1px solid #ffd1e1;
        background-color: #fff8f8;
    }

    .table th {
        background-color: #ffd1e1;
        color: #333;
    }

    .table-hover tbody tr:hover {
        background-color: #ffe5ec;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    a {
        color: #ff6f91;
        text-decoration: none;
    }

    a:hover {
        color: #ff5777;
        text-decoration: underline;
    }

    .text-end {
        text-align: right;
    }

    .row.mb-3 {
        align-items: center;
    }

    .col-2.text-end a {
        font-size: 14px;
        background-color: #ff6f91;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .col-2.text-end a:hover {
        background-color: #ff5777;
    }
</style>

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model is not null)
{
    <form asp-action="Index" autocomplete="off">
        <div class="@containerDivClass">
            <div class="row">
                <div class="col-12 text-danger">
                    @TempData["Message"]
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-10 text-success">
                    @Model.Count() record(s) found.
                </div>
                <div class="col-2 text-end">
                    <a asp-action="Create" class="btn-pink">Create</a>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TagName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TagName)
                            </td>
                            <td class="text-end w-25">
                                <a asp-action="Details" asp-route-id="@item.TagId">Details</a>&nbsp;|&nbsp;
                                <a asp-action="Edit" asp-route-id="@item.TagId">Edit</a>&nbsp;|&nbsp;
                                <a asp-action="Delete" asp-route-id="@item.TagId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
}

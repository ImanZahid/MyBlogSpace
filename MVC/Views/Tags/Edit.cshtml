@model TagModels

@{
    var containerDivClass = "container";
}
@{
    ViewData["Title"] = "Edit Tag";
}

<style>
    body {
        background-color: #fff8f8;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    h1 {
        color: #ff6f91;
        font-family: 'Playfair Display', serif;
        font-weight: bold;
        text-align: center;
    }

    .fw-bold {
        font-weight: bold;
        color: #333;
    }

    .btn-pink {
        width: 120px;
        height: 45px;
        font-size: 16px;
        border-radius: 5px;
        text-align: center;
        background-color: #ff6f91;
        color: white;
        border: none;
        display: inline-block;
    }

        .btn-pink:hover {
            background-color: #ff5777;
        }

    .btn-outline-pink {
        width: 120px;
        height: 45px;
        font-size: 16px;
        border-radius: 5px;
        text-align: center;
        border: 2px solid #ff6f91;
        color: #ff6f91;
        background: transparent;
        display: inline-block;
        text-decoration: none;
    }

        .btn-outline-pink:hover {
            background-color: #ff6f91;
            color: white;
            text-decoration: none;
        }

    a {
        color: #ff6f91;
        font-weight: bold;
        text-decoration: none;
        font-size: 16px;
    }

        a:hover {
            color: #ff5777;
            text-decoration: underline;
        }

    label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ffd1e1;
    }

        .form-control:focus {
            box-shadow: 0 0 5px #ff6f91;
            border-color: #ff6f91;
        }

    .text-danger {
        color: #ff6f91 !important;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        background-color: white;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    hr {
        border: 1px solid #ffd1e1;
    }

    .btn-group {
        display: flex;
        gap: 10px;
        align-items: center;
        justify-content: flex-start;
    }
</style>

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model != null)
{
    <div class="@containerDivClass">
        @if (TempData["Message"] != null)
        {
            <p class="text-danger">
                @TempData["Message"]
            </p>
        }

        <form asp-action="Edit" method="post" autocomplete="off">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden ID -->
            <input type="hidden" asp-for="Record.Id" />

            <!-- Tag Name -->
            <div class="row mb-3">
                <label asp-for="Record.Name" class="col-2 col-form-label fw-bold"></label>
                <div class="col-10">
                    <input asp-for="Record.Name" class="form-control" placeholder="Enter tag name" />
                    <span asp-validation-for="Record.Name" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <!-- Buttons -->
            <div class="row mb-3">
                <div class="offset-2 col-10 btn-group">
                    <button type="submit" class="btn-pink">Save</button>
                    <button type="reset" class="btn-outline-pink">Reset</button>
                    <button class="btn-outline-pink">
                        <a asp-action="Index">Back to List</a>
                    </button>
                    
                </div>
            </div>
        </form>
    </div>
}
else
{
    <div class="text-danger text-center">
        <p>Tag data is not available.</p>
        <a asp-action="Index">Back to List</a>
    </div>
}
